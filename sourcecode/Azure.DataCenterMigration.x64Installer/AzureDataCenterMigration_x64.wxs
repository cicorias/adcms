        <File Id="Microsoft.WindowsAzure.Management.Network.dll" Source="$(var.Azure.DataCenterMigration.App.TargetDir)" ></File>
        <!--Newtonsoft.Json.dll-->
        <File Id="Newtonsoft.Json.dll" Source="$(var.Azure.DataCenterMigration.App.TargetDir)"></File>
