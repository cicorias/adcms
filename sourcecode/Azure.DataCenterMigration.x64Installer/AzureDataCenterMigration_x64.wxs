        <File Id="Microsoft.WindowsAzure.Common.dll" Source="$(var.Azure.DataCenterMigration.App.TargetDir)"></File>
        <!--Microsoft.WindowsAzure.Common.NetFramework.dll-->
        <File Id="Microsoft.WindowsAzure.Common.NetFramework.dll" Source="$(var.Azure.DataCenterMigration.App.TargetDir)" ></File>
        <!--Microsoft.WindowsAzure.Management.dll-->
        <File Id="Microsoft.WindowsAzure.Management.dll" Source="$(var.Azure.DataCenterMigration.App.TargetDir)"></File>
